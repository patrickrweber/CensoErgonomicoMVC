@using CensoErgonomico.Domain.DTOs;
@{
    List<PessoaDTO> pessoas = ViewBag.Pessoas;
}
<style>
    .table-bordered {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-bordered tr {
            border-bottom: 1px solid black;
            /* Cor da borda (pode ser personalizada) */
        }

        .table-bordered thead th {
            border: 1px solid black;
            background-color: white;
        }
</style>

<div>
    <div style="height: 30vw; overflow: auto;">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th class="sticky-top">Nome</th>
                    <th class="sticky-top">Idade</th>
                    <th class="sticky-top">Data de Nascimento</th>
                    <th class="sticky-top">Sexo</th>
                    <th class="sticky-top">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (pessoas != null && pessoas.Any() && pessoas.Count > 0)
                {
                    foreach (var pessoa in pessoas)
                    {
                        <tr style="margin-bottom: 5px">
                            <td>@pessoa.nome</td>
                            <td>@pessoa.idade</td>
                            <td>@pessoa.dataNascimento</td>
                            <td>@pessoa.sexo</td>
                            <td>
                                <button class="btn btn-sm btn-primary">Editar</button>
                                <button class="btn btn-sm btn-danger">Excluir</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-3">
        <button id="btnAbrirModal" type="button" class="btn btn-success">
            Novo Registro
        </button>


        <div class="modal fade" id="cadastroModal" tabindex="-1" role="dialog" aria-labelledby="cadastroModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cadastroModalLabel">Cadastrar pessoa</h5>
                        <button type="button" id="btnModal" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Aqui será carregada a partial view de cadastro -->
                        <div id="cadastroForm"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#btnModal').click(function () {
            $('#cadastroModal').modal('hide');
        });
        $('#btnAbrirModal').click(function () {
            console.log("clicou")
            $.ajax({
               url: '@Url.Action("Cadastrar", "Pessoa")',
                type: 'GET',
                cache: false,
                success: function (data) {
                    $('#cadastroForm').html(data);
                    $('#cadastroModal').modal('show'); 
                }
            });
        });
    });
</script>